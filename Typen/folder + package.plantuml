@startuml Typ Folder + Package
!include color.plantuml
<style>
folder {
    Fontstyle normal
    backgroundColor Yellow
}
component {
    Fontstyle normal
    backgroundColor Yellow
}
Package {
    Fontstyle normal
    backgroundColor Green
}
<style>

package "<<Package>> \n**Package**" Green {
    label "\n" as p
}

folder "<<Layer>> \n**Layer**" Yellow {
    label "\n"
}

folder "<<Cluster>> \n**Cluster**" Yellow {
    label "\n" as l
}
@enduml